CMAKE_MINIMUM_REQUIRED(VERSION 3.10)
PROJECT(banshao)
set( CMAKE_EXPORT_COMPILE_COMMANDS ON )
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)
set(CMAKE_CXX_EXTENSIONS OFF)

AUX_SOURCE_DIRECTORY(SRC_DIR src)
INCLUDE_DIRECTORIES(
    ${PROJECT_SOURCE_DIR}/common
	${PROJECT_SOURCE_DIR}/ext/fmod/inc
	${PROJECT_SOURCE_DIR}/ext/SDL2/include
	${PROJECT_SOURCE_DIR}/ext/SDL2_ttf/include
	${PROJECT_SOURCE_DIR}/ext/SDL2_image/include
)
INCLUDE_DIRECTORIES(SYSTEM PRIVATE $ENV{INCLUDE})